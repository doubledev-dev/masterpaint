---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";
import { SEO } from "astro-seo";

interface Props {
  title: string;
  titleTab?: string;
  description: string;
  image?: string;
}

// const canonicalURL = new URL(Astro.url.pathname, Astro.site);

//change default image but I don't know what should I use, this is default image from astro
const { title, titleTab, description, image = "/thumbnail.webp" } = Astro.props;
---

<!-- Global Metadata --><!-- adding languageAlternates -->
<SEO
  title={titleTab}
  titleTemplate="%s | MasterPaint 2548"
  titleDefault="MasterPaint 2548"
  description={description}
  charset="UTF-8"
  openGraph={{
    basic: {
      title: title,
      type: "website",
      image: image,
      url: Astro.url,
    },
    image: {
      type: "image/webp",
      secureUrl: "/thumbnail.webp",
      alt: title,
      width: 1200,
      height: 630,
    },
  }}
  twitter={{
    card: "summary_large_image",
    site: "@masterpaint2548",
    title: title,
    description: description,
    image: image,
    imageAlt: title,
  }}
  extend={{
    link: [{ rel: "icon", href: "/favicon.svg", type: "image/svg+xml" }],
    meta: [
      {
        httpEquiv: "X-UA-Compatible",
        content: "IE=edge",
      },
      { name: "viewport", content: "width=device-width,initial-scale=1" },
      { name: "generator", content: Astro.generator },
      {
        name: "theme-color",
        content: "#0C1A66",
      },
    ],
  }}
  languageAlternates={[
    { hrefLang: "th", href: Astro.url },
    { hrefLang: "en", href: Astro.url + "/en" },
  ]}
/>
