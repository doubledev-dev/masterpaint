---
import HeroImage from "@/assets/hero/hero.webp";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<article
  class="flex h-[50vh] min-w-full items-end bg-black bg-cover bg-center bg-no-repeat lg:h-[70vh]"
  style={{ backgroundImage: `url(${HeroImage.src})` }}
>
  <div class="bottom-[10%] p-[10%]">
    <h1 class="mb-6 font-Inter text-5xl text-white">{t("hero.title")}</h1>
    <p class="w-80 text-sm text-white">{t("hero.description")}</p>

    <a href={`/${lang}/contact`}>
      <button
        class="mt-12 items-center rounded-3xl bg-white p-2 px-4 text-center text-base text-accent-dark-blue transition-colors duration-300 ease-in-out hover:bg-accent-dark-blue hover:text-white"
        >{t("hero.contact")}</button
      >
    </a>
  </div>
</article>
