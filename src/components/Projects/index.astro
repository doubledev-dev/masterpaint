---
import MainContainer from "@/components/Container/MainContainer.astro";
import ProjectCard from "./ProjectCard.astro";
import { PROJECTS } from "@/data/Project.ts";

interface Props {
  slice?: boolean;
  withTitle?: boolean;
  withButton?: boolean;
}

const { slice = true, withTitle = true, withButton = true } = Astro.props;
---

<MainContainer className="mx-auto max-w-7xl p-6">
  {
    withTitle && (
      <h1 class="mb-12 text-center font-Inter text-[40px] font-semibold uppercase text-primary-800">
        our Projects
      </h1>
    )
  }
  <div class="grid grid-cols-3 gap-4">
    {
      slice
        ? PROJECTS.slice(0, 9).map((company) => (
            <ProjectCard title={company.name} image={company.image} />
          ))
        : PROJECTS.map((company) => (
            <ProjectCard title={company.name} image={company.image} />
          ))
    }
  </div>
  {
    withButton && (
      <button
        class="mx-auto mt-8 flex rounded-full border border-primary-800 bg-white px-[13px] py-[10px] lowercase transition duration-300 ease-in-out hover:bg-primary-800 hover:text-white"
        onclick="window.location.href = '/project'"
      >
        See More
      </button>
    )
  }
</MainContainer>
