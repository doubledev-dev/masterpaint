---
import { Image } from "astro:assets";
import Container from "@/components/Container/ContentContainer.astro";

import midImg from "@/assets/about/quoteImage.webp";
import bottomImg from "@/assets/about/Img3.svg";
---

<Container className="mx-auto max-w-7xl p-6">
  <section class="mx-auto flex max-w-5xl flex-row justify-center">
    <Image
      src={midImg}
      alt="Middle Image"
      class="w-full h-[132px] lg:h-[440px] object-cover rounded-2xl drop-shadow-xl "
    />
  </section>
  <section
    class="mx-auto flex max-w-5xl flex-row items-center justify-center gap-x-[72px] py-16"
  >
    <Image
      src={bottomImg}
      alt="Bottom Image"
      class="hidden drop-shadow-xl lg:block"
    />
    <div class="flex flex-col gap-y-3 text-primary-800  max-w-[70%]">
      <div class="text-4xl lg:text-6xl">“</div>
      <div class="text-base italic lg:text-2xl">
        A little progress each day adds up to big results.
      </div>
      <div class="text-right text-4xl lg:text-6xl">”</div>
    </div>
  </section>
</Container>
