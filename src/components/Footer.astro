  <div class="flex flex-row gap-x-[72px] px-9 text-base">
    <div>
      <div class="flex flex-row justify-start gap-x-12">
        <Icon
          name="ion:location-sharp"
          class="w-[25px] shrink-0 align-middle"
          size={25}
        />
        <p class="w-56 place-content-center overflow-visible">
          {t("footer.address")}
        </p>
      </div>
    </div>
    <div>
      <div class="flex flex-col gap-y-6">
        <div class="flex w-[300px] flex-row justify-start gap-x-12">
          <Icon name="ic:baseline-email" class="align-middle" size={25} />
          <p class="place-content-center">masterpaint2548@gmail.com</p>
        </div>
        <div class="flex w-[300px] flex-row justify-start gap-x-12">
          <a
            href="https://www.facebook.com/profile.php?id=61559212771849&mibextid=qi2Omg&rdid=U2fqnYXjlcxx0mGJ"
          >
            <Icon name="fe:facebook" class="align-middle" size={25} /></a
          >
          <p class="place-content-center">masterpaint2548</p>
        </div>
        <div class="flex w-[300px] flex-row justify-start gap-x-12">
          <Icon name="bxs:phone-call" class="align-middle" size={25} />
          <div>
            <p>0891123192</p>
            <p>027625855</p>
          </div>
        </div>
        <div class="flex w-[300px] flex-row justify-start gap-x-12">
          <Icon name="uim:line" class="align-middle" size={30} />
          <p class="place-content-center">@masterpaint2548</p>
        </div>
      </div>
    </div>
  </div>
</footer>
