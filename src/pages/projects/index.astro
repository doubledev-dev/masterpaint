---
import MainLayout from "@/layouts/MainLayout.astro";
import FilterContainer from "@/components/Filter/FilterContainer.tsx";
import { getCollection } from "astro:content";
import Projects from "@/components/Projects";

const projects = (await getCollection("projects"));
---

<MainLayout>
  <div class="mx-auto max-w-5xl space-y-8">
    <div class="space-y-8">
      <h1 class="font-Inter text-[40px] font-bold text-primary-800">
        Projects
      </h1>
      <FilterContainer client:load />
    </div>
  </div>
  <Projects slice={false} withTitle={false} slugItems={projects} client:only/>
</MainLayout>
