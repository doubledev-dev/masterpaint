---
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import BaseHead from "@/components/BaseHead.astro";
import "@fontsource/bai-jamjuree";
import "@fontsource/bai-jamjuree/400.css";
import "@fontsource/bai-jamjuree/400-italic.css";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex min-h-screen flex-col overflow-y-scroll bg-secondary font-baijam">
    <Navbar />
    <slot name="before-main" />
    <main>
      <div class="my-6 space-y-6 xl:my-10 xl:space-y-10"><slot /></div>
    </main>
    <Footer />
  </body>
</html>
