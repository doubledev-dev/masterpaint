{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "allowJs": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.astro",
    "src/**/**/*.mdx",
    "src/**/**/*.md",
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
